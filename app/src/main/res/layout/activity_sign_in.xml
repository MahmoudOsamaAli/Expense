<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:background="@drawable/gradiant_background"
    tools:context=".view.activities.signInUp.SignInActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:animateLayoutChanges="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/progerss_bar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/logo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_logo2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/rellay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_below="@id/logo"
            android:background="?android:attr/selectableItemBackground"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <TextView
                android:id="@+id/tv_log_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textSize="30sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/text_color"
                android:fontFamily="sans-serif-medium"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/search_view_background"
                android:textColor="@color/text_color"
                android:fontFamily="sans-serif-light"
                android:textSize="15sp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:hint="Enter user name"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                android:layout_marginBottom="5dp"
                android:paddingEnd="15dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/search_view_background"
                android:textColor="@color/text_color"
                android:fontFamily="sans-serif-light"
                android:textSize="15sp"
                android:hint="Enter password"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="8dp"
                android:paddingEnd="15dp" />
            <Button
                android:id="@+id/log_in_button"
                android:text="@string/login_now"
                style="@style/log_in_buttons"
                />
            <TextView
                android:id="@+id/txt_sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Don't have an account  Sign-up"
                android:fontFamily="sans-serif-light"
                android:textSize="16sp"
                android:padding="4dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/text_color"
                android:textAllCaps="false"
                android:gravity="center_horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/rellay2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:id="@+id/tv_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_up"
                android:textSize="30sp"
                android:textColor="@color/text_color"
                android:fontFamily="sans-serif-medium"
                />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/search_view_background"
                    android:textColor="@color/text_color"
                    android:fontFamily="sans-serif-light"
                    android:textSize="15sp"
                    android:hint="Enter First Name And Last Name"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    android:paddingEnd="15dp" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/search_view_background"
                    android:textColor="@color/text_color"
                    android:fontFamily="sans-serif-light"
                    android:textSize="15sp"
                    android:hint="Enter E-mail"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    android:paddingEnd="15dp" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/search_view_background"
                    android:textColor="@color/text_color"
                    android:fontFamily="sans-serif-light"
                    android:textSize="15sp"
                    android:hint="Enter Password"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    android:paddingEnd="15dp" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/search_view_background"
                    android:textColor="@color/text_color"
                    android:fontFamily="sans-serif-light"
                    android:textSize="15sp"
                    android:hint="Confirm Password"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    android:paddingEnd="15dp" />

<!--                <Button-->
<!--                    android:id="@+id/sign_google_button"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="40dp"-->
<!--                    android:layout_marginTop="40dp"-->
<!--                    android:layout_marginBottom="8dp"-->
<!--                    android:background="@color/text_color"-->
<!--                    android:drawableStart="@drawable/ic_google"-->
<!--                    android:drawableLeft="@drawable/ic_google"-->
<!--                    android:padding="8dp"-->
<!--                    android:layout_marginLeft="3dp"-->
<!--                    android:layout_marginRight="3dp"-->
<!--                    android:text="Sign up with google"-->
<!--                    android:textAllCaps="false" />-->
                <com.shobhitpuri.custombuttons.GoogleSignInButton
                    android:id="@+id/sign_google_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"
                    android:text="Continue with google"
                    app:isDarkTheme="false" />

                <Button
                    android:id="@+id/fb_login_button"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/fb_background_button"
                    android:drawableStart="@drawable/ic_facebook_white"
                    android:drawableLeft="@drawable/ic_facebook_white"
                    android:padding="8dp"
                    android:text="Sign up with facebook"
                    android:textAllCaps="false"
                    android:textColor="@color/text_color" />

                <Button
                    android:id="@+id/twitter_login_button"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/twitter_background_button"
                    android:drawableStart="@drawable/ic_twitter_white"
                    android:drawableLeft="@drawable/ic_twitter_white"
                    android:padding="8dp"
                    android:text="Sign up with twitter"
                    android:textAllCaps="false" />
                <TextView
                    android:id="@+id/tv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="back"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:layout_marginTop="16dp"
                    android:drawableStart="@drawable/ic_arrow_left"
                    android:drawableLeft="@drawable/ic_arrow_left"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>